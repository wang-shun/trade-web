<?xml version="1.0" encoding="UTF-8"?>
<querys>
	 <dicts>
		<customDict id="getStatus" beanName="qqcdDicTaskDelegateStatus"></customDict>
		<customDict id="getUserRealNameByUsername" beanName="qqcdUserUsernameName"></customDict>
		
	</dicts>
	
  	<formatters>
		<formatter id="dateFormatter" ref="" class="com.aist.common.quickQuery.formatter.DateFormatter">
			<properties>
				<property name="pattern">yyyy-MM-dd</property>
			</properties>
		</formatter>
		<formatter id="numberFormater" ref="" class="com.aist.common.quickQuery.formatter.NumberFormatter">
			<properties>
				<property name="groupingUsed">true</property>
				<property name="maximumFractionDigits">3</property>
				<property name="maximumIntegerDigits">40</property>
				<property name="minimumFractionDigits">0</property>
				<property name="minimumIntegerDigits">1</property>
			</properties>
		</formatter>
		<formatter id="integerFormater" ref="" class="com.aist.common.quickQuery.formatter.NumberFormatter">
			<properties>
				<property name="maximumFractionDigits">0</property>
			</properties>
		</formatter>
		<formatter id="emailFormater" ref="" class="com.aist.common.quickQuery.formatter.EmailFormatter"/>
	</formatters>
	
	<query id="queryTaskDelegateQuery">
		<searchCondition>
            <condition field="owner" name="owner" label="" searchType="EQ" showType="textbox" showCallback="" defaultValue=""/>
        </searchCondition>
		<searchSql>
			<baseSql>
				<![CDATA[
					SELECT
					PKID, owner, assignee, status,status as statusCode,CREATE_DATE as createDate,CLOSE_DATE as closeDate
					FROM sctrans.T_TS_TASK_DELEGATE 
					where 1 = 1
				]]>
			</baseSql>
			<groupSql>
			</groupSql>
		</searchSql>
		<grid>
			<table-row>
				<column type="both" name="PKID" index="" checkbox="true" display="" customDict="" sysDict="" format="" width="0" isSort="" align="" halign="" order="" resizable="" hide="true"/>
				<column type="both" name="owner" index="" checkbox="" display="" customDict="" sysDict="" format="" width="150" isSort="true" align="" halign="" order="desc" resizable=""/>
				<column type="both" name="assignee" index="" checkbox="" display="" customDict="getUserRealNameByUsername" sysDict="" format="" width="150" isSort="true" align="" halign="" order="" resizable=""/>
				<column type="both" name="status" index="" checkbox="" display="" customDict="getStatus" sysDict=""  width="150" isSort="true" align="" halign="" order="" resizable=""/>
				<column type="both" name="createDate" index="" checkbox="" display="" customDict="" sysDict="" beanFormatter="dateFormatter" format="" width="150" isSort="true" align="" halign="" order="" resizable="" />
				<column type="both" name="closeDate" index="" checkbox="" display="" customDict="" sysDict="" beanFormatter="dateFormatter" format=""  width="150" isSort="" align="" halign="" order="" resizable="" />						
				<column type="both" name="statusCode" index="" checkbox="" display="" customDict="" sysDict="" format="" width="150" isSort="true" align="" halign="" order="desc" resizable=""/>
			</table-row>
		</grid>
	</query>
	
</querys>